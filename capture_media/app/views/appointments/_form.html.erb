<%= form_for [user, appointment] do |f| %>
    <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
    </div>
    <div class="form-group">
    <%= f.label :date %> 
    <%= f.date_field :date %>
    </div>   
    <div class="form-group">
    <%= f.label :quantity, 'Quantity' %>
    <%= f.number_field :quantity, in: 1..5 %>
    </div>
    #preset packages 
    <div class="form-group">
        #<%= f.label :package_id %> <br>
        #<%= f.select(:package_id, Appointment::PACKAGE_OPTION) %>
    </div>
    <%= f.submit %>
<% end %>    